<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.QuizQuestionActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="What Country does this flag\n belong to?"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:layout_marginTop="10dp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgFlag"
            android:layout_width="310dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_flag_of_india"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="12dp"
            android:gravity="center_vertical">

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progressBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:progress="1"
                android:max="10"
                android:indeterminate="false"
                app:trackThickness="6dp"
                app:trackCornerRadius="4dp"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/10"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:layout_marginStart="15dp"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvOptionOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="11dp"
            android:text="India"
            android:gravity="center"
            android:textSize="21sp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/country_textview_bg"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvOptionTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="11dp"
            android:text="India"
            android:gravity="center"
            android:textSize="21sp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/country_textview_bg"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvOptionThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/country_textview_bg"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:padding="11dp"
            android:text="India"
            android:textSize="21sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvOptionFour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/country_textview_bg"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:padding="11dp"
            android:text="India"
            android:textSize="21sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:text="Submit"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_medium"
            android:padding="12dp"
            android:letterSpacing="0.05"
            android:background="?attr/colorPrimary"/>
    </LinearLayout>

</ScrollView>